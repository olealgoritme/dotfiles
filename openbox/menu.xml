<?xml version="1.0" encoding="utf-8"?>
<openbox_menu xmlns="http://openbox.org/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://openbox.org/                 file:///usr/share/openbox/menu.xsd">
	<menu id="root-menu" label="Openbox 3">
		<item label="Run Program">
			<action name="Execute">
				<execute>gmrun</execute>
			</action>
		</item>
		<separator/>
		<item label="Terminal">
			<action name="Execute">
				<execute>x-terminal-emulator</execute>
			</action>
		</item>
		<item label="Terminal Borderless">
			<action name="Execute">
				<execute>xfce4-terminal --hide-borders</execute>
			</action>
		</item>
		<item label="Chromium Browser">
			<action name="Execute">
				<execute>chromium-browser</execute>
			</action>
		</item>
		<item label="Google Keep">
			<action name="Execute">
				<execute>chromium-browser --app-id=hmjkmjkepdijhoojdojkdfohbdgmmhki</execute>
			</action>
		</item>
		<separator/>
		<item label="File Explorer">
			<action name="Execute">
				<execute>thunar</execute>
			</action>
		</item>
		<item label="Virt-Manager">
			<action name="Execute">
				<execute>virt-manager</execute>
			</action>
		</item>
		<!-- This requires the presence of the 'openbox-menu' package to work -->
		<menu id="/Debian"/>
		<separator/>
		<menu execute="/usr/bin/obamenu" id="applications-menu" label="Applications"/>
		<separator/>
		<item label="VIM Borderless">
			<action name="Execute">
				<execute>xfce4-terminal --geometry 240x55+277+220 --hide-borders -e &quot;bash -c '/usr/bin/nvim ~/code/'&quot;</execute>
			</action>
		</item>
		<separator/>
		<item label="OpenBox Menu Config">
			<action name="Execute">
				<execute>obmenu</execute>
			</action>
		</item>
		<item label="OpenBox Config">
			<action name="Execute">
				<execute>obconf</execute>
			</action>
		</item>
		<item label="GTK Theme Config">
			<action name="Execute">
				<execute>gtk-chtheme</execute>
			</action>
		</item>
		<item label="PulseAudio Control">
			<action name="Execute">
				<execute>pavucontrol</execute>
			</action>
		</item>
		<item label="Reconfigure">
			<action name="Reconfigure"/>
		</item>
		<item label="Restart">
			<action name="Restart"/>
		</item>
		<item label="Lock">
			<action name="Execute">
				<execute>light-locker-command -l</execute>
			</action>
		</item>
		<separator/>
		<item label="Exit">
			<action name="Exit"/>
		</item>
	</menu>
</openbox_menu>
