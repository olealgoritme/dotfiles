{
    "coc.preferences.formatOnSaveFiletypes": [
        "css",
        "html",
        "Markdown",
        "javascript",
        "typescript",
        "json",
        "javascriptreact",
        "typescriptreact"
    ],
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c",
                "cpp",
                "c++",
                "objc",
                "objcpp"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                }
            },
            "rootPatterns": [
                ".ccls",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ]
        }
    },
    "suggest.noselect": true
}
